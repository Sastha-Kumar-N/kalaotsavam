# Disable directory listing 
Options -Indexes

# Set default page when accessing directory
DirectoryIndex index1.html

# Redirect root domain to main event page
RewriteEngine On
RewriteCond %{HTTP_HOST} ^(www\.)?asbtevents\.in$ [NC]
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^$ https://asbtevents.in/kalaotsavam/index1.html [R=301,L]

# Redirect www to non-www (optional)
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
# RewriteRule ^(.*)$ http://%1/$1 [R=301,L]

# Enable rewrite engine (for clean URLs, optional)
# RewriteRule ^event/([0-9]+)$ event.php?id=$1 [L]

